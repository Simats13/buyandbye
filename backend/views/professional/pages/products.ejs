<script>
    function readURL(input,idForm) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
          reader.onload = function (e) {
              $('#new_imageImg_'+idForm)
                  .attr('src', e.target.result)
                  .removeAttr('hidden')
                  .height(200);
                  $('#currentImage_'+idForm).prop('hidden', 'hidden');
                  $('#currentImageInput_'+idForm).prop('hidden', 'hidden');       
          };
          reader.readAsDataURL(input.files[0]);
      }
  };
</script>
